<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvUsernameDET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="alpfe"
        android:transitionName="username"/>

    <TextView
        android:id="@+id/tvDateDET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameDET"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="3/24/2021" />

    <ImageView
        android:id="@+id/ivImageDET"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tvDateDET"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars"
        android:transitionName="image"/>

    <TextView
        android:id="@+id/tvDescriptionDET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageDET"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="This is a photo of mine" />

</RelativeLayout>